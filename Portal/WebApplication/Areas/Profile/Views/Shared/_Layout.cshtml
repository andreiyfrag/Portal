@using BForms.Html
@using RequireJS
@using Portal.Resources

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="initial-scale=1, width=device-width, maximum-scale=1, user-scalable=no">
    <link rel="icon" type="image/png" href="@Url.Content("~/Content/images/favicon.png")" />
        <title>@ViewBag.Title - Project Template</title>

    @Styles.Render("~/profilePage")

    @*For IE7-8 support of HTML5 elements and responsive*@
    <!--[if lt IE 9]>
      <script src="@Url.Content("~/Scripts/BForms/Bundles/iefix.js")"
      type="text/javascript">
      </script>
    <![endif]-->
</head>
<body>
    <div id="wrapper">
        @Html.Partial("_Navbar")
        <div id="page-wrapper">
            <div class="row">
                @Html.Partial("_Partial")

                <section id="body">

                    @RenderBody()
                </section>

            </div>
            <div class="row">
                <div class="col-lg-8">
                    @*@Html.Partial("_AreaCharts")
                @Html.Partial("_BarChart")
                @Html.Partial("_Timeline")*@
                </div>

                <div class="col-lg-4">
                    @*@Html.Partial("_Notifications")
                @Html.Partial("_DonutChart")
                @Html.Partial("_Chat")*@
                </div>
            </div>
        </div>
    </div> 
    

    <script src="~/Scripts/BForms/Bundles/js/jquery-1.10.2.js"></script>
    <script src="~/Scripts/BForms/Bundles/js/bootstrap.min.js"></script>
    <script src="~/Scripts/BForms/Bundles/js/plugins/metisMenu/jquery.metisMenu.js"></script>

    <script src="~/Scripts/BForms/Bundles/js/plugins/morris/raphael-2.1.0.min.js"></script>
    <script src="~/Scripts/BForms/Bundles/js/plugins/morris/morris.js"></script>

    <script src="~/Scripts/BForms/Bundles/js/sb-admin.js"></script>

    <script src="~/Scripts/BForms/Bundles/js/demo/dashboard-demo.js"></script>

    @*<div class="loading-global">
                    Loading...
                </div>*@

            @if (HttpContext.Current.IsDebuggingEnabled)
            {
                @Html.RenderRequireJsSetup(Url.Content("~/Scripts"),
                    Url.Content("~/Scripts/bforms/components/requirejs/require.js"),
                    new[]
                    {
                        "~/Scripts/BForms/RequireJS.config",
                        "~/RequireJS.config"
                    })
            }
            else
            {
                @Html.RenderRequireJsSetup(Url.Content("~/Scripts"),
                    Url.Content("~/Scripts/bforms/components/requirejs/require.js"),
                    new[]
                    {
                        "~/Scripts/BForms/RequireJS.Release.config",
                        "~/RequireJS.Release.config"
                    })
            }

</body>

</html>