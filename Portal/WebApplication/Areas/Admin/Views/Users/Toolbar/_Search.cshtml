@model Portal.Areas.Admin.Models.UsersSearchModel
@using Portal.Resources
@using BForms.Html
@using BForms.Models

<div id="holidays_search" class="grid_toolbar_form">
    <div class="basic">

        @using (Html.BsBeginForm())
        {
            <div class="col-sm-3 col-md-3 col-lg-3 form-group">
                @Html.BsLabelFor(m => m.Username)
                <div class="input-group">
                    @Html.BsInputFor(m => m.Username)
                </div>
            </div>

            <div class="col-sm-3 col-md-3 col-lg-3 form-group">
                @Html.BsLabelFor(m => m.Email)
                <div class="input-group">
                    @Html.BsInputFor(m => m.Email)
                </div>
            </div>
            <div class="col-sm-3 col-md-3 col-lg-3 form-group">
                @Html.BsLabelFor(m => m.Firstname)
                <div class="input-group">
                    @Html.BsInputFor(m => m.Firstname)
                </div>
            </div>
            <div class="col-sm-3 col-md-3 col-lg-3 form-group">
                @Html.BsLabelFor(m => m.Lastname)
                <div class="input-group">
                    @Html.BsInputFor(m => m.Lastname)
                </div>
            </div>
            <div class="col-lg-12 grid_toolbar_submit">
                <button type="submit" class="btn btn-default js-btn-search">@Resource.Search</button>
                <a href="#" class="js-btn-reset">Reseteaza</a>
            </div>
        }
    </div>
</div>

